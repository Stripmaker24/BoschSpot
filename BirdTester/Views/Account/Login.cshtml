@model BoschSpot.App.ViewModels.LoginViewModel
<link rel="stylesheet" href="~/css/loginPage.css">
<div class="background-blur"></div>
<div>
    <div class="text-center w-100 p-4 text-white" style=" text-shadow: 0px 3px rgba(0,0,0,0.2);">
        <h1>Welkom terug!</h1>
        <h3>Klaar om verder te gaan?</h3>
    </div>
    <div class="d-flex flex-column">
        <div class="text-left m-4 info-div info-div-left info-div-glass">
            <form enctype="multipart/form-data" method="post" asp-action="Login" asp-controller="Account" class="mt-3">
                <div class="form-group text-left row">
                    <label asp-for="Username" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Username" class="form-control rounded-pill">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group text-left row">
                    <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Password" class="form-control rounded-pill">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group pl-3 pt-3 pr-3 row text-center">
                    <div class="w-100">
                        <button type="submit" class="btn border border-dark w-100 btn-yellow rounded-pill">Inloggen</button>
                    </div>
                    <div class="d-flex flex-column align-content-center text-center w-100 mt-4 pt-3 border-top border-dark">
                        <p>Nog geen account?</p>
                        <a class="btn border border-dark rounded-pill btn-green align-self-center w-50" asp-controller="Account" asp-action="Register">Ga naar registreren!</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}