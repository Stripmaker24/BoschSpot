@model BoschSpot.App.ViewModels.SpotCreateViewModel
<div class="d-flex flex-column">
    <div class="text-center m-4 info-div info-div-left">
        <h1>Nieuwe @Model.Contender.Name Spot!</h1>
        <form enctype="multipart/form-data" method="post" asp-action="Create" asp-controller="Spot" class="mt-3">
            <input hidden asp-for="ContenderID" value="@Model.ContenderID">
            <div class="form-group row text-left">
                <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Photo" class="form-control custom-file-input">
                        <label class="custom-file-label">Kies foto...</label>
                    </div>
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row text-left">
                <label asp-for="Address" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Address" class="form-control">
                    <span asp-validation-for="Address" class="text-danger"></span>
                    <p>Probeer zo volledig mogelijk, bijvoorbeeld: Markt 1 5211 JV 's-Hertogenbosch</p>
                    <p>Hierdoor kunnen we spot zo accuraat mogelijk op de kaart zetten</p>
                </div>
            </div>
            <div class="form-group row text-right">
                <div class="col-sm-12">
                    <button type="submit" class="btn border border-dark w-25" style="background-color:#A7C6D1;">Uploaden</button>
                </div>
            </div>

            @section Scripts
            {
                @{
                    <partial name="_ValidationScriptsPartial" />
                }
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var filename = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(filename);
                        });
                    });
                </script>
            }
        </form>
    </div>
</div>

