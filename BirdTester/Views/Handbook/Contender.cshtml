@model BoschSpot.Data.Models.ContenderModel
<link rel="stylesheet" href="~/css/bird.css" />
<link rel="stylesheet" href="~/css/BirdBanner.css" />
@if (Model.PhotoUrl != null)
{
    <div data-bird="@Model.Name" class="banner" style="background-image:url(@Model.PhotoUrl);"></div>
}
else
{
    <div class="banner" style="background-image:url(/wwwroot/Img/Black.png);"></div>
}
<div class="banner-blur text-center text-white shadow"><h1>@Model.Name</h1><p>@Model.LatinName</p></div>
<div class="container" style="margin-top: 230px">
    <div class="info-container">
        <div class="bird-left">
            <div class="info-div info-div-left d-flex flex-column m-4">
                <div class="w-100 text-center">
                    <h1>Algemeen</h1>
                </div>
                <div>@Model.Description</div>
            </div>
            <div class="info-div info-div-left d-flex flex-column m-4">
                <div class="w-100 text-center">
                    <h1>Herkenning</h1>
                </div>
                <div>@Model.Recognition</div>
            </div>
        </div>
        <div class="bird-right d-flex flex-column justify-content-between">
            <div class="d-flex m-4">
                <img class="bird-photo" src="@Model.PhotoUrl" />
            </div>
            <div class="btn-group d-flex flex-column m-4">
                <a asp-controller="Spot" asp-route-ID="@Model.ID" asp-action="Create"
                   class="btn p-3 mt-2 mb-2 text-center rounded-pill font-weight-bold border-dark w-100"
                   style="background-color:#95F895">Gespot!</a>
                <a asp-controller="Handbook" asp-route-ID="@Model.GroupID" asp-action="GroupList"
                   class="btn p-3 mt-2 mb-2 text-left rounded-pill font-weight-bold d-flex justify-content-between align-items-center border-dark w-100"
                   style="background-color:#A7C6D1"><i style="font-size:30px; color:black;" class="fas fa-angle-left"></i>Terug naar groep</a>
            </div>
        </div>
    </div>
    <div class="info-container text-center">
        <div class="w-100">Meer weten? Ga naar <a href="@Model.Source">de bron</a>!</div>
    </div>
</div>

